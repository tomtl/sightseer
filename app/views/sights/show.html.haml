.container
  %h1= @sight.name
  %p
    %strong Category:
    = @sight.category.name
  %p
    %strong Address:
    = @sight.address
  %p
    %strong Description:
    = @sight.description
  %p
    = image_tag single_location_map_link(@sight.address)

  %h3 Photos
  %p NEED A STRING OF PHOTO THUMBNAILS HERE

  %h3 Reviews
  %p Review: blah blah blah.
  %p Review: more blah blah blah.
  %a.btn.btn-default{href: "#", role: "button"} Add Review

  %a.btn.btn-default{href: edit_sight_path(@sight), role: "button"} Edit this Sight

  %section.reviews.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for [@sight, Review.new] do |f|
        %fieldset
          .form-group
            %label Rate this sight
            .row
              .col-sm-3
                = f.select :rating, options_for_sight_reviews
          .form-group
            .row
              .col-sm-8
                = f.text_area :content, label: "Write Review", rows: 6
        %fieldset.form-group.actions.clearfix
          = f.submit "Submit"
          = link_to "Cancel", @sight
      %header
        %h3 Reviews (#{@reviews.count})
      %ul
        - @reviews.each do |review|
          %article.review
            %li.row
              .col-sm-2
                %span Rating: #{review.rating} / 5
                %p by
                = link_to review.user.full_name, user_path(review.user)
              .col-sm-8
                %p= review.content
