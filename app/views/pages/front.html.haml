.container
  .jumbotron
    .center-block
      %h1 Sightseer
      %h3 Find and review tourist attractions!
      %p
        %a.btn.btn-primary.btn-lg{href: sights_path, role: "button"} See Sights!

  .center-block
    #carousel-example-generic.carousel.slide{"data-ride" => "carousel"}
      / Indicators
      %ol.carousel-indicators
        %li.active{"data-slide-to" => "0", "data-target" => "#carousel-example-generic"}
        - @sights.count.times do |x|
          %li{"data-slide-to" => "#{x + 1}", "data-target" => "#carousel-example-generic"}

      / Wrapper for slides
      .carousel-inner{:role => "listbox"}
        .item.active
          %a{href: sight_path(Sight.last)}
            %img{alt:"#{Sight.last.name}", src:"#{Sight.last.photos.first.image_url(:medium)}", align:"middle"}
            .carousel-caption
              = Sight.last.name
        - @sights.each do |sight|
          .item
            %a{href: "#{sight_path(sight)}"}
              %img{alt:"#{sight.name}", src:"#{sight.photos.first.image_url(:medium)}", align:"middle"}
              .carousel-caption
                = sight.name

      / Controls
      %a.left.carousel-control{"data-slide" => "prev", :href => "#carousel-example-generic", :role => "button"}
        %span.glyphicon.glyphicon-chevron-left{"aria-hidden" => "true"}
        %span.sr-only Previous
      %a.right.carousel-control{"data-slide" => "next", :href => "#carousel-example-generic", :role => "button"}
        %span.glyphicon.glyphicon-chevron-right{"aria-hidden" => "true"}
        %span.sr-only Next